#!/usr/bin/env python3
"""
Fawkes Crash Replay - Wrapper script
"""

import sys
from pathlib import Path

# Add parent directory to path so 'fawkes' module can be imported
parent_dir = Path(__file__).parent.parent
sys.path.insert(0, str(parent_dir))

# Now import and run
from fawkes.replay import main

if __name__ == '__main__':
    main()
